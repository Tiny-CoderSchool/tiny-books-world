<%= stylesheet_link_tag 'users', media: 'all', 'data-turbolinks-track': 'reload' %>

<script>
$(document).ready(function () {
  $("#new_user").validate({
  rules: {
    "user[email]": {required: true, email: true, remote:"/users/check_email" },
    "user[password]": {required: true, minlength: 6},
    "user[password_confirmation]": {required: true, equalTo: "#user_password"}
  },
  messages: {
    "user[email]": {required: "Please specify your email",
    email: "Invalid email format, please specify as name@domain.com",
    remote: "Existing email, please specify the other" },
  }
  });
});
</script>
<div class="center-container">
	<div class="row-xs-flex-center">
        <div class="modal-dialog modal-lg">
					<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      			<h2>Create Account</h2>
      			<hr class="colorgraph">
      			<div class="row">
							<div class="col-xs-12 col-sm-6 col-md-6">
      					<div class="form-group">
                  <%= f.text_field :email, class: 'form-control input-lg', placeholder: 'First Name', tabindex: 1%>
      					</div>
      				</div>
      				<div class="col-xs-12 col-sm-6 col-md-6">
      					<div class="form-group">
      						<%= f.text_field :email, class: 'form-control input-lg', placeholder: 'Last Name', tabindex: 2%>
      					</div>
      				</div>
      			</div>
						<div class="form-group">
              <%= f.email_field :email, autofocus: true, class: 'form-control input-lg', placeholder: 'Email Address', tabindex: 4%>
      			</div>
						<div class="row">
      				<div class="col-xs-12 col-sm-6 col-md-6">
      					<div class="form-group">
                  <%= f.password_field :password, autocomplete: "off", class: 'form-control input-lg', placeholder: 'Password', tabindex: 5%>
      					</div>
      				</div>
      				<div class="col-xs-12 col-sm-6 col-md-6">
      					<div class="form-group">
                  <%= f.password_field :password_confirmation, class: 'form-control input-lg', placeholder: 'Confirm Password', tabindex: 6%>
      					</div>
      				</div>
      			</div>
      			<hr class="colorgraph">
      			<div class="row">
      				<div class="col-xs-12 col-md-6"><%= f.submit 'Create Account', class:  'btn btn-primary btn-block btn-lg', tabindex: 7%></div>
      				<div class="col-xs-12 col-md-6"><a href="" class="btn btn-primary btn-block btn-lg">Sign In</a></div>
      			</div>
      		<% end %>
      </div>
  </div>
</div>
